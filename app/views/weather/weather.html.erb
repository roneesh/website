<div class="weather_container group">

  <h1 class="weather_header">The Weather in <%=@city.capitalize%></h1>

  <form class="weather_selector_form" action="/weather" method="get">
  	Change city to <input type="text" name="city" placeholder="where you are">
  	<input type="submit" name="submit">  
  </form>
  
  <p class="weather_tagline"><i>a 10-day forecast Brought to you by the WeatherUnderground API</i></p>
  
  <ul class="forecast">
	<% @forecast.each do |day| %>
		<li class="daily_weather_forecast">
			<p> <%= day[0] %><br/> <%= day[1] %> / <span> <%= day[2] %></span> </p>
			<img src="<%=day[3]%>"></img>
		</li>
	<% end %>
  </ul>
